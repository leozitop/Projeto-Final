@{
    ViewData["Title"] = "Cadatro - Ponto Digital";
    ViewData["h2"] = "Cadastro";
}

<header>
    @{
        Html.RenderPartial("_HeaderNavBar");
    }
</header>

<main>
    <h2>@ViewData["h2"]</h2>
    <form method="POST" action='@Url.Action("Cadastrar", "Cadastro")'>
        <div>
            <label for="nome">Nome Completo</label>
            <br>
            <input id="nome" type="text" name="nome" maxlength="40" minlength="10">
        </div>

        <div>
            <label for="email">Email</label>
            <br>
            <input id="email" type="email" name="email">
        </div>

        <div>
            <label for="senha">Senha</label>
            <br>
            <input id="senha" type="password" name="senha" maxlength="20" minlength="5">
        </div>

        <div>
            <label for="telefone">Telefone</label>
            <br>
            <input id="telefone" type="text" name="telefone">
        </div>

        <div>
            <label for="endereco">Endere√ßo</label>
            <br>
            <input id="endereco" type="text" name="endereco">
        </div>

        <div>
            <label for="data-nascimento">Data de Nascimento</label>
            <br>
            <input id="data-nascimento" type="date" name="data-nascimento">
        </div>

            <input type="submit" value="Cadastrar!">
    </form>
    
</main>