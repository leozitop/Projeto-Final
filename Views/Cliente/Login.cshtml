@{
    ViewData["Title"] = "Encomendas - Agora Vai";
    ViewData["h2"] = "Login";
}

    <header>
        @{
            Html.RenderPartial("_HeaderNavBar", ViewData["user"]);
        }
        <hgroup>
            <h1>McBonald's</h1>
        </hgroup>
    </header>

<main>
    <h2>@ViewData["h2"]</h2>
    <form method="POST" action='@Url.Action("Login", "Cliente")'>
        <div class="flex-container">
            <div>
                <label for="email">Email</label>
                <br>
                <input type="email" id="email" name="email">
            </div>

            <div>
                <label for="senha">Senha</label>
                <br>
                <input type="password" id="senha" name="senha">
            </div>

            <div>
                <label for="confirmar-senha">Confirme sua senha</label>
                <br>
                <input type="password" id="confirmar-senha" name="confirmar-senha">
            </div>

            <input type="submit" value="Logar">

            <div>
                <a href='@Url.Action("Index", "Cadastro")'>Fazer cadastro</a>
            </div>
        </div>
    </form>
</main>